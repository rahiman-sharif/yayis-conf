<%- include('partials/header', { title: 'Project Gallery' }) %>

<section class="gallery-hero">
    <div class="hero-overlay"></div>
    <div class="hero-content text-center">
        <h1>Our Cake Creations</h1>
        <p>A showcase of our passion, baked into every project.</p>
    </div>
</section>

<section class="page-section gallery-section">
    <div class="container">
        <% if (projects && projects.length > 0) { %>            <div class="gallery-grid" id="main-gallery-grid">
                <% projects.forEach((project, index) => { %>
                    <div class="gallery-item force-visible" data-index="<%= index %>">
                        <div class="gallery-item-image-container">
                            <img src="<%= project.image %>" alt="<%= project.title %>" class="gallery-item-image">
                            <div class="gallery-item-overlay">
                                <a href="/gallery/<%= project.id %>" class="btn-view-full" title="View Details">
                                    <i class="fas fa-eye"></i> View Details
                                </a>
                            </div>
                        </div>
                        <div class="gallery-item-content">
                            <h3 class="gallery-item-title"><a href="/gallery/<%= project.id %>"><%= project.title %></a></h3>
                            <p class="gallery-item-description"><%= project.description %></p>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="empty-gallery-state text-center">
                <i class="fas fa-camera fa-3x text-muted mb-3"></i>
                <h2>Our Gallery is Baking!</h2>
                <p class="text-muted">We're busy creating more beautiful cakes. Check back soon to see our latest masterpieces!</p>
            </div>
        <% } %>
    </div>
</section>

<%- include('partials/footer') %>
