<%- include('partials/header', { title: 'Project Gallery' }) %>

<section class="page-section">
    <div class="container">
        <h2 class="text-center">Our Past Projects</h2>
        
        <% if (projects && projects.length > 0) { %>
            <div class="gallery-grid">
                <% projects.forEach(project => { %>
                    <div class="gallery-item scroll-animate">
                        <img src="<%= project.image %>" alt="<%= project.title %>">
                        <div class="gallery-item-info">
                            <h3><%= project.title %></h3>
                            <p><%= project.description %></p>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <p class="text-center mt-2">Our project gallery is currently empty. Check back soon to see our creations!</p>
        <% } %>
    </div>
</section>

<%- include('partials/footer') %>
