<%- include('partials/admin-header', { title: 'Menu Manager' }) %>

<a href="/admin/menu/add" class="btn btn-primary mb-1">Add New Cake</a>

<% if (menuItems && menuItems.length > 0) { %>
    <table class="admin-table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% menuItems.forEach(item => { %>
                <tr>
                    <td><img src="<%= item.image %>" alt="<%= item.name %>"></td>
                    <td><%= item.name %></td>
                    <td>$<%= item.price.toFixed(2) %></td>
                    <td><%= item.description ? item.description.substring(0, 70) : '' %>...</td>
                    <td class="actions">
                        <a href="/admin/menu/edit/<%= item.id %>" class="btn btn-secondary">Edit</a>
                        <form action="/admin/menu/delete/<%= item.id %>" method="POST" style="display: inline;">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?')">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
<% } else { %>
    <p>No menu items found. <a href="/admin/menu/add">Add one now!</a></p>
<% } %>

<%- include('partials/admin-footer') %>
