<%- include('partials/admin-header', { title: 'Project Manager' }) %>

<a href="/admin/projects/add" class="btn btn-primary mb-1">Add New Project</a>

<% if (projects && projects.length > 0) { %>
    <table class="admin-table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Title</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% projects.forEach(project => { %>
                <tr>
                    <td><img src="<%= project.image %>" alt="<%= project.title %>"></td>
                    <td><%= project.title %></td>
                    <td><%= project.description ? project.description.substring(0, 70) : '' %>...</td>
                    <td class="actions">
                        <a href="/admin/projects/edit/<%= project.id %>" class="btn btn-secondary">Edit</a>
                        <form action="/admin/projects/delete/<%= project.id %>" method="POST" style="display: inline;">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this project?')">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
<% } else { %>
    <p>No projects found. <a href="/admin/projects/add">Add one now!</a></p>
<% } %>

<%- include('partials/admin-footer') %>
